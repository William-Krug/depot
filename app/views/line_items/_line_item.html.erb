<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <% if false %>
    <td><%= button_to 'Remove', line_item, method: :delete, data: { confirm: 'Are you sure you want to remove this line item?' }, class: "remove-line-item" %></td>
  <% end %>
  <td><%= button_to 'Remove One', line_item, params: { line_item: { product_id: line_item.product_id } }, method: :patch %>
  <td class="quantity"><%= line_item.quantity %></td>
  <td><%= line_item.product.title %></td>
  <td class="price"><%= number_to_currency(line_item.total_price) %></td>
</tr>